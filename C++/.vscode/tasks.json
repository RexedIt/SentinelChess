{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build debug",
			"type": "shell",
			"command": "cmake --build ${workspaceFolder}/build --config Debug",
			"targets": [
				"SentinelConsole"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build release",
			"type": "shell",
			"command": "cmake --build ${workspaceFolder}/build --config Release",
			"targets": [
				"SentinelConsole"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build debug tests",
			"type": "shell",
			"command": "cmake --build ${workspaceFolder}/build --config Debug",
			"targets": [
				"sc_test"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
	]
}